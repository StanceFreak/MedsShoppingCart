<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_thumb_item_home_child"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_title_item_home_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/product_name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.25"
                android:fontFamily="@font/epilogue_semibold_600"/>

            <TextView
                android:id="@+id/tv_desc_item_home_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/product_status"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:lineSpacingMultiplier="1.25"
                android:fontFamily="@font/epilogue_regular_400"/>

            <TextView
                android:id="@+id/tv_categories_item_home_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/product_selling_unit"
                android:textSize="12sp"
                android:fontFamily="@font/epilogue_regular_400"/>

            <TextView
                android:id="@+id/tv_date_item_home_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:text="@string/product_status"
                android:textSize="13sp"
                android:fontFamily="@font/epilogue_regular_400"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>