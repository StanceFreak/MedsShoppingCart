<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingHorizontal="10dp"
    android:dividerPadding="-10dp"
    android:divider="@drawable/divider_views"
    android:showDividers="end">

    <TextView
        android:id="@+id/tv_number_item_product_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesanan 1"
        android:textColor="@color/black"
        android:fontFamily="@font/barlow_bold"
        android:textSize="14sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_thumb_item_product_confirmation"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_thumb_item_product_confirmation"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_item_product_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/barlow_semibold"
                android:text="@string/lorem"/>

            <TextView
                android:id="@+id/tv_qty_item_product_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Barang"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_price_item_product_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/barlow_semibold"
                android:layout_marginTop="5dp"
                android:text="@string/product_price"/>

        </LinearLayout>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_courier_item_product_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rounded_outline_gray"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Pengiriman"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/barlow_semibold"
            app:drawableStartCompat="@drawable/ic_courier" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_subtotal_item_product_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal"
            android:textSize="16sp"
            android:fontFamily="@font/barlow_regular"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_subtotal_price_item_product_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_price"
            android:textColor="@color/black"
            android:fontFamily="@font/barlow_semibold"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</LinearLayout>