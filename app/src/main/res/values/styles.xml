<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="colorPrimary">@color/midnight_green</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/dark_gray</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    
    <style name="BotNavItemActive">
        <item name="fontFamily">@font/epilogue_semibold_600</item>
    </style>

    <style name="BotNavItemInactive">
        <item name="fontFamily">@font/epilogue_regular_400</item>
    </style>

</resources>